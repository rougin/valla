{
  "name": "rougin/valla",
  "description": "A simple validation package in PHP.",
  "keywords": [ "php-validation", "php-validator" ],
  "homepage": "https://github.com/rougin/valla",
  "license": "MIT",
  "authors":
  [
    {
      "email": "rougingutib@gmail.com",
      "homepage": "https://roug.in/",
      "name": "Rougin Gutib",
      "role": "Software Engineer"
    }
  ],
  "require":
  {
    "php": ">=5.3.0",
    "psr/http-message": "~1.0",
    "vlucas/valitron": "~1.4"
  },
  "require-dev":
  {
    "phpunit/phpunit": "*",
    "sanmai/phpunit-legacy-adapter": "*",
    "rougin/slytherin": "~0.9"
  },
  "autoload":
  {
    "psr-4":
    {
      "Rougin\\Valla\\": "src"
    }
  },
  "autoload-dev":
  {
    "psr-4":
    {
      "Rougin\\Valla\\": "tests"
    }
  },
  "scripts":
  {
    "analyze": "phpstan analyse",
    "restyle": "php-cs-fixer fix --config=phpstyle.php",
    "test": "phpunit"
  }
}
